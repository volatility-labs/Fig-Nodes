{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "react-jsx",
        "types": [
            "vite/client"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": false,
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "core/*"
            ],
            "@graph/*": [
                "graph/*"
            ],
            "@renderer/*": [
                "renderer/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@stores/*": [
                "stores/*"
            ],
            "@ui/*": [
                "ui/*"
            ],
            "@registries/*": [
                "registries/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@tests/*": [
                "tests/*"
            ],
            "@/*": [
                "./*"
            ],
            "@fig-node/core": [
                "../core/src"
            ],
            "@fig-node/core/*": [
                "../core/src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.d.ts"
    ]
}
