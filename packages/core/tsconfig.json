{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "exactOptionalPropertyTypes": false,
    "noEmitOnError": false,
    "paths": {
      "@core/*": ["./src/core/*"],
      "@nodes/*": ["./src/nodes/*"],
      "@services/*": ["./src/services/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
